{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "temp",
    "rootDir": ".",
    "noEmit": true,
    "composite": false,
    "isolatedDeclarations": false,
    "types": ["vitest/globals", "node"],
    "paths": {
      "@baicie/*": ["packages/*/src"]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
    "scripts/**/*",
    "playground/**/*"
  ],
  "exclude": [
    "**/dist",
    "**/temp",
    "**/node_modules",
    "**/tsconfig.tsbuildinfo",
    "playground/vue",
    "playground/napi-vue3",
    "playground/json-diff"
  ]
}
